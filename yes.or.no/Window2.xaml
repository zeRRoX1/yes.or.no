<Window x:Class="yes.or.no.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yes.or.no"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <Canvas>
            <Button Content="Yes" Style="{StaticResource StyleButton}" Canvas.Top="300" Canvas.Right="120" Click="Button_Yes"/>
            <Button Content="No" Style="{StaticResource StyleButton}" Canvas.Top="300" Canvas.Right="500" Click="Button_No"/>
            <TextBlock Text="You are idiot?" Canvas.Left="100" Canvas.Top="92" Height="100" Width="600" TextAlignment="Center" TextWrapping="NoWrap" Background="#FF7EDAC7" FontSize="72"/>
        </Canvas>
    </Grid>
</Window>
